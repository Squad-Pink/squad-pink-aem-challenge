<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Success"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
            margin="{Boolean}false"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <textColor
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                        cq-msm-lockable="./textColor"
                        fieldLabel="Escolha a cor do texto"
                        name="./textColor"/>
                    <submitBtnTitle
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        cq-msm-lockable="./submitBtnTitle"
                        fieldLabel="Digite o texto do botão"
                        name="./submitBtnTitle"/>
                    <submitBtnColor
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                        cq-msm-lockable="./submitBtnColor"
                        fieldLabel="Escolha a cor do botão"
                        name="./submitBtnColor"/>
                    <submitColorText
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                        cq-msm-lockable="./submitColorText"
                        fieldLabel="Escolha a cor do texto do botão"
                        name="./submitColorText"/>
                    <submitFirstIconResType
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                        name="./submitFirstIcon/sling:resourceType"
                        value="core/wcm/components/image/v2/image"/>
                    <submitFirstIcon
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                        allowUpload="{Boolean}false"
                        autoStart="{Boolean}false"
                        class="cq-droptarget"
                        cq-msm-lockable="./submitFirstIcon/file"
                        fieldLabel="Escolha o ícone à esquerda do texto do botão "
                        fileNameParameter="./submitFirstIcon/fileName"
                        fileReferenceParameter="./submitFirstIcon/fileReference"
                        mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff,image/svg+xml]"
                        multiple="{Boolean}false"
                        name="./submitFirstIcon/file"
                        title="Drag to select image"
                        uploadUrl="${suffix.path}"
                        useHTML5="{Boolean}true"/>
                    <submitSecondIconResType
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                        name="./submitSecondIcon/sling:resourceType"
                        value="core/wcm/components/image/v2/image"/>
                    <submitSecondIcon
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                        allowUpload="{Boolean}false"
                        autoStart="{Boolean}false"
                        class="cq-droptarget"
                        cq-msm-lockable="./submitSecondIcon/file"
                        fieldLabel="Escolha o ícone à direita do texto do botão"
                        fileNameParameter="./submitSecondIcon/fileName"
                        fileReferenceParameter="./submitSecondIcon/fileReference"
                        mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff,image/svg+xml]"
                        multiple="{Boolean}false"
                        name="./submitSecondIcon/file"
                        title="Drag to select image"
                        uploadUrl="${suffix.path}"
                        useHTML5="{Boolean}true"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
