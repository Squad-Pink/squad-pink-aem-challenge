<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Tabs Nav"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
            margin="{Boolean}false"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <url1
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        cq-msm-lockable="./url1"
                        fieldLabel="Url do primeiro item da tab de navegação:"
                        name="./url1"/>
                    <url2
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        cq-msm-lockable="./url2"
                        fieldLabel="Url do segundo item da tab de navegação:"
                        name="./url2"/>
                    <url3
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        cq-msm-lockable="./url3"
                        fieldLabel="Url do terceiro item da tab de navegação:"
                        name="./url3"/>
                    <pageTitle
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        cq-msm-lockable="./pageTitle"
                        fieldLabel="Digite o titulo da página:"
                        name="./pageTitle"/>
                    <pageTitleColor
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                        cq-msm-lockable="./pageTitleColor"
                        fieldLabel="Escolha a cor do título da página"
                        name="./pageTitleColor"/>
                    <titleTab1
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        cq-msm-lockable="./titleTab1"
                        fieldLabel="Digite o titulo do primeiro item da tab de navegação:"
                        name="./titleTab1"/>
                    <titleTab2
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        cq-msm-lockable="./titleTab2"
                        fieldLabel="Digite o titulo do segundo item da tab de navegação:"
                        name="./titleTab2"/>
                    <titleTab3
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        cq-msm-lockable="./titleTab3"
                        fieldLabel="Digite o titulo do terceiro item da tab de navegação:"
                        name="./titleTab3"/>
                    <tabTitleColor
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                        cq-msm-lockable="./tabTitleColor"
                        fieldLabel="Escolha cor dos títulos da tab de navegação:"
                        name="./tabTitleColor"/>
                    <titleBorderColor
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                        cq-msm-lockable="./titleBorderColor"
                        fieldLabel="Escolha a cor da borda inferior dos títulos da tab de navegação:"
                        name="./titleBorderColor"/>
                    <tabTitleActiveColorr
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                        cq-msm-lockable="./tabTitleActiveColorr"
                        fieldLabel="Escolha a cor dos títulos da tab de navegação quando estão ativos:"
                        name="./tabTitleActiveColorr"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
