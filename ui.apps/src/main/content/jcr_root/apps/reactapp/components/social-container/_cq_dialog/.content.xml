<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Social Container"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <tab-1
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Inputs"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <socialContainer
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldLabel="Adicione e edite os inputs">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                            cq-msm-lockable="./socialContainer"
                                            name="./socialContainer">
                                            <items jcr:primaryType="nt:unstructured">
                                                <inputType
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    defaultValue="Escolha o tipo do input"
                                                    fieldLabel="Escolha o tipo do input"
                                                    name="./inputType"
                                                    value="false">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <option1
                                                            jcr:primaryType="nt:unstructured"
                                                            text="text"
                                                            value="type1"/>
                                                        <option2
                                                            jcr:primaryType="nt:unstructured"
                                                            text="url"
                                                            value="type2"/>
                                                        <option3
                                                            jcr:primaryType="nt:unstructured"
                                                            text="tel"
                                                            value="type3"/>
                                                        <option4
                                                            jcr:primaryType="nt:unstructured"
                                                            text="email"
                                                            value="type4"/>
                                                        <option5
                                                            jcr:primaryType="nt:unstructured"
                                                            text="checkbox"
                                                            value="type5"/>
                                                    </items>
                                                </inputType>
                                                <inputLabelText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Digite o texto da label"
                                                    name="./inputLabelText"/>
                                                <inputLabelColor
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                    fieldLabel="Escolha a cor da label"
                                                    name="./inputLabelColor"/>
                                                <inputErrorText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Digite o texto da mensagem de erro"
                                                    name="./inputErrorText"/>
                                                <inputColorError
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                    fieldLabel="Escolha a cor da mensagem de erro"
                                                    name="./inputColorError"/>
                                                <inputPlaceholderText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Digite o texto do placeholder"
                                                    name="./inputPlaceholderText"/>
                                                <inputPlaceholderColor
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                    fieldLabel="Escolha a cor do placeholder"
                                                    name="./inputPlaceholderColor"/>
                                                <inputBorderColor
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                    fieldLabel="Escolha a cor da borda do input"
                                                    name="./inputBorderColor"/>
                                            </items>
                                        </field>
                                    </socialContainer>
                                </items>
                            </column>
                        </items>
                    </tab-1>
                    <tab-2
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Button"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <submitBtnTitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        cq-msm-lockable="./submitBtnTitle"
                                        fieldLabel="Digite o texto do botão"
                                        name="./submitBtnTitle"/>
                                    <submitBtnColor
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                        cq-msm-lockable="./submitBtnColor"
                                        fieldLabel="Escolha a cor do botão"
                                        name="./submitBtnColor"/>
                                    <submitColorText
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                        cq-msm-lockable="./submitColorText"
                                        fieldLabel="Escolha a cor do texto do botão"
                                        name="./submitColorText"/>
                                    <submitFirstIconResType
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                        name="./submitFirstIcon/sling:resourceType"
                                        value="core/wcm/components/image/v2/image"/>
                                    <submitFirstIcon
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                        allowUpload="{Boolean}false"
                                        autoStart="{Boolean}false"
                                        class="cq-droptarget"
                                        cq-msm-lockable="./submitFirstIcon/file"
                                        fieldLabel="Escolha o ícone a esquerda do texto do botão "
                                        fileNameParameter="./submitFirstIcon/fileName"
                                        fileReferenceParameter="./submitFirstIcon/fileReference"
                                        mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff,image/svg+xml]"
                                        multiple="{Boolean}false"
                                        name="./submitFirstIcon/file"
                                        title="Drag to select image"
                                        uploadUrl="${suffix.path}"
                                        useHTML5="{Boolean}true"/>
                                    <submitSecondIconResType
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                        name="./submitSecondIcon/sling:resourceType"
                                        value="core/wcm/components/image/v2/image"/>
                                    <submitSecondIcon
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                        allowUpload="{Boolean}false"
                                        autoStart="{Boolean}false"
                                        class="cq-droptarget"
                                        cq-msm-lockable="./submitSecondIcon/file"
                                        fieldLabel="Escolha o ícone a direita do texto do botão"
                                        fileNameParameter="./submitSecondIcon/fileName"
                                        fileReferenceParameter="./submitSecondIcon/fileReference"
                                        mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff,image/svg+xml]"
                                        multiple="{Boolean}false"
                                        name="./submitSecondIcon/file"
                                        title="Drag to select image"
                                        uploadUrl="${suffix.path}"
                                        useHTML5="{Boolean}true"/>
                                </items>
                            </column>
                        </items>
                    </tab-2>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
